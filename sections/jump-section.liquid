                  </svg>

                  <div class="count-text">
                    <h2>{{- block.settings.percentage_count_1 -}}</h2>
                    <p>
                      {{- block.settings.organisation_text_1 -}}
                    </p>
                  </div>
                </div>
              {%- endif -%}
              {%- if block.settings.percentage_count_2 != blank or block.settings.organisation_text_2 != blank -%}
