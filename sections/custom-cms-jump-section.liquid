{%- assign showSection = true -%}
{% if section.settings.hide_for_guest_user == true and customer == blank %}
  {%- assign showSection = false -%}
{% endif %}

{% if showSection %}
{{ 'jump-section.css' | asset_url | stylesheet_tag }}

<style>
    #shopify-section-{{ section.id }} .inner-card {
        background: {{ section.settings.benifit_backbround_color }} !important;
       }
    #shopify-section-{{ section.id }}  .inner-card h5 {
        color : {{ section.settings.benifit_title_color }};
      }
 </style>

<section class="jump-block">  
  <div class=" page-width log_in">
    <div class="jump-redirect-block section--{{ forloop.index }} {% if customer %} log_in {% else %} log_out {% endif %}" id="scroll-section--{{- section.settings.id | handleize -}}">
        <div class="jump-details section--{{ section.id }} " style=" background: {{ section.settings.bg_color }};">
                {%- if section.settings.title != blank or section.settings.subtitle != blank or section.settings.description != blank -%}
                  <div class="jump-grid">
                    {%- if section.settings.title != blank -%}
                    <div class="jump-title">
                      <h2>{{- section.settings.title -}}</h2>
                      <div class="card_btn_wrapper"></div>
                    </div>
                    {%- endif -%}
                    {%- if section.settings.subtitle != blank or section.settings.description != blank -%}
                    <div class="jump-text">
                      <h4>{{- section.settings.subtitle -}}</h4>
                      <p> {{- section.settings.description -}}</p>
                    </div>
                    {%- endif -%}
                  </div>
                {%- endif -%}
                {% if section.settings.button_name != blank %}
                 <div class="down-arrow">
                    <button type="button" data-target="target-section--{{ section.id }}" data-btn-txt="{{ section.settings.button_name }}" data-expanded-btn-txt="{{ section.settings.expanded_button_name }}" class="button button--secondary down_arrow js-toggle-btn">
                      <span class="btn-text js-btn-text">
                        {{- section.settings.button_name -}}
                      </span>
                      <svg aria-hidden="true"  class="icon icon-arrow" focusable="false" viewBox="0 0 21 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M10.5561 0.385992C10.217 0.0873893 9.69997 0.12026 9.40136 0.45941C9.10276 0.79856 9.13563 1.31556 9.47478 1.61416L18.0699 9.18165H1.4217C0.969828 9.18165 0.603516 9.54796 0.603516 9.99983C0.603516 10.4517 0.969828 10.818 1.4217 10.818H18.0721L9.47484 18.386C9.13566 18.6845 9.10274 19.2015 9.40131 19.5407C9.69988 19.8799 10.2169 19.9128 10.5561 19.6142L20.0822 11.2287L20.0827 11.2282C20.2568 11.0746 20.3963 10.8858 20.4918 10.6742C20.5805 10.4777 20.6294 10.2658 20.636 10.0507C20.637 10.0339 20.6375 10.0169 20.6375 9.99983C20.6375 9.98206 20.637 9.96441 20.6358 9.94692C20.6288 9.73324 20.5799 9.52282 20.4918 9.32764C20.3963 9.11604 20.2568 8.92719 20.0827 8.77363L20.0822 8.77318L10.5561 0.385992Z" fill="currentColor"></path>
                      </svg>
                    </button>
                  </div>
                {% endif %}
        </div>

        <div id="target-section--{{ section.id }}" class="jump-open-block js-hide-element hidden">
          <div class="round-text-block">
            {%- if section.settings.percentage_count_1 != blank or section.settings.organisation_text_1 != blank -%}
              <div class="inner-grid-block">
                <div class="grid-box">
                <div class="inner-title">
                  <svg xmlns="http://www.w3.org/2000/svg" width="330" height="308" viewBox="0 0 330 308" fill="none">
                    <path d="M329.834 135.753C334.391 234.076 244.168 307.397 157.296 307.397C70.4238 307.397 0 238.584 0 153.699C0 68.8132 70.4238 0 157.296 0C244.168 0 329.834 50.8676 329.834 135.753Z" fill="{{ section.settings.secondary_color }}"  />
                  </svg>
                  <div class="grid-title">
                    {% if section.settings.percentage_count_1 != blank %}
                      <h2>{{- section.settings.percentage_count_1 -}}</h2>
                    {% endif %}
                    {% if section.settings.organisation_text_1 != blank %}
                      <h6>{{- section.settings.organisation_text_1 -}}</h6>
                    {% endif %}
                    
                    <svg xmlns="http://www.w3.org/2000/svg" width="73" height="71" viewBox="0 0 73 71" fill="none">
                    <path d="M22.3233 65.0732C-24.6264 41.681 19.3708 11.3782 24.6276 8.4453C56.1866 -9.16227 68.398 5.57059 71.5103 15.9363C75.9508 30.7256 69.2729 88.4654 22.3233 65.0732Z" fill="{{ section.settings.benifit_svg_color_1 }}" />
                    </svg>
                  </div>
                </div>
                <div class="inner-boxes">
                  {% assign count_index = 0 %}
                        {%- for block in section.blocks -%}
                            {% assign count_index = count_index | plus: 1 %}
                            <div class="inner-card {% if forloop.index > 4 %} hidden {% endif %}">
                            {%- if block.settings.title != blank or block.settings.desc_1 != blank -%}
                              <div class="card-text">
                                {% if block.settings.title != blank %}
                                  <h5> {{- block.settings.title -}}</h5>
                                {% endif %}
                                {% if block.settings.desc_1 != blank %}
                                  <p>{{- block.settings.desc_1 -}}</p>
                                {% endif %}
                              </div>
                            {% endif %}
                            </div>
                        {% endfor %}

                        {% if count_index > 4 %}                           
                          {%- if section.settings.button_text != blank -%}
                            <div class="button_space">
                              <a class="button button--secondary js-read-more" style=" background: {{ section.settings.benifit_backbround_color }};">
                                <span class="btn-text">Read more</span>
                                <svg xmlns="http://www.w3.org/2000/svg"  width="24" height="24" viewBox="0 0 24 24" fill="none">
                                  <path d="M12 2V22" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                                  <path d="M22 12H2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                                </svg>
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" >
                                  <path d="M22 12H2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                                </svg>
                              </a>
                            </div>
                        {% endif %}
                        {% endif %}
                          <div class="right-svg">
                            <svg xmlns="http://www.w3.org/2000/svg" width="209"  height="195" viewBox="0 0 209 195" fill="none">
                              <path d="M0.748559 89.3581C11.2909 -60.5256 139.657 22.7795 153.174 33.4855C234.322 97.758 208.685 146.207 184.652 165.79C150.361 193.73 -9.7938 239.242 0.748559 89.3581Z" fill="{{ section.settings.benifit_svg_color_2 }}" />
                            </svg>
                          </div>
                        </div>
                      </div>
                    </div>
                    {% endif %}
                  </div>
              </div>
             </div>
    </div>
  </div>
</section>
{% endif %}

<style>
  a:not([href]) {
    cursor: pointer;
  }
  .round-text-block .button_space a {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    border: 0;
    padding: 32px;
    font-size: 14px;
    border-radius: 40px;
}
</style>
<script>
let cmscustomelements = document.querySelectorAll('[data-section-scroll]');
if(cmscustomelements){
  cmscustomelements.forEach(function (element) {
  element.addEventListener('click', _scrollToDown.bind(this), true);
});
function _scrollToDown(event) {
  let elementToScrolls = event.currentTarget.closest('.jump-block').querySelectorAll('.jump-redirect-block');
  elementToScrolls.forEach(function (elementToScroll) {
    if (elementToScroll.getAttribute('id') == event.target.getAttribute('id')) {
      event.preventDefault();
      let scrollDistance = elementToScroll.offsetTop - document.querySelector('.header').offsetHeight;
      document.documentElement.scrollTo({ top: scrollDistance, behavior: 'smooth' });
    }
  });
}
}

let customhideButtons = document.querySelectorAll('.js-hide-block');
let customshowButtons = document.querySelectorAll('.js-show-block');
if(customhideButtons){
customhideButtons.forEach(function (hideButton) {
  hideButton.addEventListener('click', function (button) {
    button.target.closest('.jump-redirect-block').querySelector('.js-hide-element').style.display = 'block';
    button.target.closest('.jump-redirect-block').querySelector('.js-show-block').classList.remove('hidden');
    button.target.closest('.js-hide-block').classList.add('hidden');
  });
});
}
if(customshowButtons){
customshowButtons.forEach(function (showButton) {
  showButton.addEventListener('click', function (button) {
    button.target.closest('.jump-redirect-block').querySelector('.js-hide-element').style.display = 'none';
    button.target.closest('.jump-redirect-block').querySelector('.js-hide-block').classList.remove('hidden');
    button.target.closest('.js-show-block').classList.add('hidden');
  });
});
}
// script for benefit dropdown
document.querySelectorAll('.js-read-more').forEach((button) => {
  button.addEventListener('click', () => {
      console.log("button",button);
    button.classList.toggle('open');
    let innerCard = button.closest('.inner-boxes').querySelectorAll('.inner-card');
    innerCard.forEach((card, index) => {
    // console.log("index",index,card);
      if (index > 3)
        button.classList.contains('open') ? card.classList.remove('hidden') : card.classList.add('hidden');
    });
    button.querySelector('.btn-text').innerText = button.classList.contains('open') ? 'Read less' : 'Read more';
  });
});
</script>
