{{ 'ddp-banner.css' | asset_url | stylesheet_tag }}
{{ 'ddp-post-link.css' | asset_url | stylesheet_tag }}

<section class="ddp-banner {{ section.settings.custom_class }}">
  <div class="page-width">
    <div class="ddp-inner-content">
      <div class="ddp-left-text">
        {% if section.settings.ddp_heading %}
          <h1>{{ section.settings.ddp_heading }}</h1>
        {% endif %}
        {% if section.settings.ddp_text != blank %}
          {{ section.settings.ddp_text }}
        {% endif %}
      </div>
      <div class="ddp-right-img">
        <img src="{{ section.settings.image_add | img_url:'master' }}" alt="" srcset="">
      </div>
    </div>
  </div>
  <div class="ddp-bottom-image">
    <img src="https://cdn.shopify.com/s/files/1/0730/5868/1130/files/ddp-bottom.png?v=1690952576" alt="" srcset="">
  </div>
</section>

{% schema %}
{
  "name": "DDP banner",
  "settings": [
    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom class add"
    },
    {
      "type": "inline_richtext",
      "id": "ddp_heading",
      "label": "Heading Text"
    },
    {
      "type": "richtext",
      "id": "ddp_text",
      "label": "Small Text"
    },
    {
      "type": "image_picker",
      "id": "image_add",
      "label": "Banner image"
    }
  ],
  "presets": [
    {
      "name": "DDP banner"
    }
  ]
}
{% endschema %}

