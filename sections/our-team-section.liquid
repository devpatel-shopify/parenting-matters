                </svg>                                  
            </div>
        </div>
    </div>
</section>





{% schema %}
{
    "name":"our team section",
    "class": "our_team_section",
    "settings": [
        {
            "type": "checkbox",
            "id": "full_width",
            "label": "Make Section Full Width",
            "default": false
        },
        {
            "type": "checkbox",
            "id": "top_radius",
            "default": true,
            "label": "Section top border radius"
        },
        {
            "type":"text",
            "id": "our_team_section_title",
            "label": "Our Team Section Title",
            "default":"Meet the team behind Parenting Matters Online"
        },
        {
            "type": "color",
            "id": "section_bg_color",
            "label": "Section Background Color",
            "default": "#FDF8EC"
        },
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "default": "scheme_1",
            "label": "Color scheme"
        },
        {
            "type": "color",
            "id": "bg_card_color",
            "label": "Bg Card Color",
            "default": "#FDF8EC"
        },
        {
            "type": "color_scheme",
            "id": "color_scheme2",
            "default": "scheme_1",
            "label": "Color scheme for popup"
        },
        {
            "type": "header",
            "content": "section padding"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 200,
            "step": 4,
            "unit": "px",
            "label": "Padding Top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 200,
            "step": 4,
            "unit": "px",
            "label": "Padding Bottom",
            "default": 36
        }
    ],
    "blocks": [
        {
            "name": "ourteam",
            "type": "ourteam",
            "settings": [
                {
                    "type":"image_picker",
                    "id": "blog_card_image",
                    "label": "Our Team Member Image"
                },
                {
                    "type":"text",
                    "id": "our_team_title",
                    "label": "Our Team Title",
                    "default":"Professor Stephen Scott"
                },
                {
                    "type":"text",
                    "id": "our_team_sub_title",
                    "label": "Our Team Sub Title",
                    "default": "Professor of Child Health and Behaviour"
                },
                {
                    "type":"richtext",
                    "id": "our_team_description",
                    "label": "Our team sort Description"
                },
                {
                    "type":"richtext",
                    "id": "our_team_description2",
                    "label": "Our team main Description"
                },
                {
                    "type": "text",
                    "id": "card_btn",
                    "label": "Card button" ,
                    "default": "Read more"
                }
            ]
        }
    ],
    "presets":[
        {
            "name": "our team section",
            "blocks": [
                {
                    "type": "ourteam"
                }
            ] 
        }
    ]
}
{% endschema %}