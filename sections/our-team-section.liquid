{{ 'our-team-section.css' | asset_url | stylesheet_tag }}


<style>
    .ourteam--{{ section.id }}--padding {
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
    
    @media screen and (max-width: 749px) {
        .ourteam--{{ section.id }}--padding {
            padding-top: calc({{ section.settings.padding_top }}px - 80px);
            padding-bottom: calc({{ section.settings.padding_bottom }}px - 80px);
        }
    }

    {%- for block in section.blocks -%}
        .our_team_block_wrapper {
            Background: {{ section.settings.bg_card_color }};
        }
    {%- endfor -%}
</style>

<section class="ourteam--{{ section.id }}--padding ourteam--{{ section.id }} color-{{ section.settings.color_scheme }} {% if section.settings.top_radius == true%} top_border_radius{% endif %}">
    <div class="our_team_main_wrapper{% unless section.settings.full_width %} page-width{% endunless %}">
       <div class="our-team-wrapper">
            <div class="our_team_main">
                {%- if section.settings.our_team_section_title != blank -%}
                    <div class="our_team_title_section">
                        <h2 class="our_section_title">{{ section.settings.our_team_section_title }}</h2>
                    </div>
                {%- endif -%}
                <div class="our_team_block">
                    {%- for block in section.blocks -%}
                        <div class="our_team_wrapper-main {{ block.id }}" {{ block.shopify_attributes }}>
                            <div class="our_team_block_wrapper">
                                <div class="our_team_wrapper">
                                    {%- if block.settings.blog_card_image != blank -%}
                                        <div class="our_team_image">
                                            {{ block.settings.blog_card_image | image_url: width: 500 | image_tag }} 
                                        </div>
                                    {%- endif -%}
                                    {%- if block.settings.card_bour_team_titletn != blank or block.settings.our_team_sub_title -%}
                                        <div class="our_team_content">
                                            {%- if block.settings.our_team_title != blank -%}
                                                <h4 class="our_team_title">{{ block.settings.our_team_title }}</h4>
                                            {%- endif -%}
                                            {%- if block.settings.our_team_sub_title != blank -%}
                                                <div class="our_team_sub_title">{{ block.settings.our_team_sub_title }}</div>
                                            {%- endif -%}
                                        </div>
                                    {%- endif -%}
                                </div>
                                {%- if block.settings.card_btn != blank -%}
                                    <div class="card_btn">
                                        {%- if block.settings.card_btn != blank -%}
                                            <a href="javascript:void(0);" data-modal="{{ block.id }}" class="button button--secondary">
                                                {{- block.settings.card_btn | escape -}}
                                                {%- render 'icon-arrow' -%}
                                            </a>
                                        {%- endif -%}
                                    </div>
                                {%- endif -%}
                            </div>
                        </div>

                        <div class="modal" id="{{ block.id }}">
                            <div class="modal-bg modal-exit"></div>
                            <div class="modal-container-cover">
                                <div class="modal-container color-{{ section.settings.color_scheme2 }}">
                                    <button class="modal-close modal-exit">{% render 'close-popup' %}</button>
                                    <div class="popup-inr">
                                        <div class="our_team_wrapper">
                                            {%- if block.settings.blog_card_image != blank -%}
                                                <div class="our_team_image">
                                                    {{ block.settings.blog_card_image | image_url: width: 500 | image_tag }} 
                                                </div>
                                            {%- endif -%}
                                            <div class="our_team_content">
                                                {%- if block.settings.our_team_title != blank -%}
                                                    <h3 class="our_team_title">{{ block.settings.our_team_title }}</h3>
                                                {%- endif -%}
                                                {%- if block.settings.our_team_sub_title != blank -%}
                                                    <div class="our_team_sub_title h5">{{ block.settings.our_team_sub_title }}</div>
                                                {%- endif -%}
                                                <div class="only-desktop">
                                                    {%- if block.settings.our_team_description != blank -%}
                                                        <div class="our_team_description">{{ block.settings.our_team_description }}</div>
                                                    {%- endif -%}
                                                    {%- if block.settings.our_team_description2 != blank -%}
                                                        <hr />
                                                        <div class="our_team_description">{{ block.settings.our_team_description2 }}</div>
                                                    {%- endif -%}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="only-mobile">
                                            {%- if block.settings.our_team_description != blank -%}
                                                <div class="our_team_description">{{ block.settings.our_team_description }}</div>
                                            {%- endif -%}
                                            {%- if block.settings.our_team_description2 != blank -%}
                                                <hr />
                                                <div class="our_team_description">{{ block.settings.our_team_description2 }}</div>
                                            {%- endif -%}
                                        </div>
                                    </div>
                                    <div class="popup-icon">
                                        {{ 'popup-icon.svg' | asset_url | img_tag }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    {%- endfor -%}
                </div>
            </div>
            <div class="bg_animation_wrapper small-hide">
                <svg width="1035" height="619" viewBox="0 0 1035 619" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M597.135 171.835C607.678 21.9509 736.044 105.256 749.561 115.962C830.708 180.235 805.072 228.684 781.038 248.267C746.748 276.206 586.593 321.718 597.135 171.835Z" fill="#FFE8AE"/>
