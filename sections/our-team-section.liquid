                    <path d="M18.0653 521.414C21.7457 469.089 66.559 498.171 71.2778 501.909C99.6069 524.346 90.6571 541.26 82.2668 548.097C70.2959 557.851 14.385 573.739 18.0653 521.414Z" fill="#FFE8AE"/>
                    <path d="M235.059 107.499C359.169 40.1583 510.241 110.839 564.544 223.02C618.847 335.202 574.015 469.154 464.408 522.211C354.801 575.267 221.926 527.337 167.623 415.156C113.32 302.974 125.452 160.556 235.059 107.499Z" fill="#FFE8AE"/>
                </svg>
            </div>
            <div class="bg_animation_mobile medium-hide large-up-hide">
                <svg width="449" height="557" viewBox="0 0 449 557" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M22.3749 458.125C26.9332 393.318 82.4372 429.338 88.2817 433.967C123.369 461.757 112.284 482.706 101.892 491.174C87.0656 503.254 17.8165 522.933 22.3749 458.125Z" fill="#FFE8AE"/>
