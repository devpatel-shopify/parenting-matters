        class="jump-redirect-block section--{{ forloop.index }} "
        id="{{- forloop.index -}}"
        {{ block.shopify_attributes }}>
        <div class="jump-details">
          <div class="jump-grid">
            <div class="jump-title">
              <h2>{{- article.title.value[0] -}}</h2>
              <div class="card_btn_wrapper"></div>
            </div>
            <div class="jump-text">
